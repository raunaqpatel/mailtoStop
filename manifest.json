{
    "name": "mailtoStop",
    "version": "1.0",
    "description": "Stop the default popup behaviour of mailto links and copy them instead to clipboard",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "<all_urls>",
        "storage",
        "notifications"
    ],

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "content_scripts": [{
        "all_frames": true,
        "matches": [
            "<all_urls>"
        ],
        "js": [
            "jquery-3.3.1.min.js",
            "popup.js",
            "page.js"
        ]
    }],

    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/logo16.png",
            "32": "images/logo32.png",
            "48": "images/logo48.png",
            "128": "images/logo128.png",
            "180": "images/logo180.png"
        },
        "icons": {
            "16": "images/logo16.png",
            "32": "images/logo32.png",
            "48": "images/logo48.png",
            "128": "images/logo128.png",
            "180": "images/logo180.png"
        }
    }

}